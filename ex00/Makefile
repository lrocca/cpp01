CC		=	clang++
CFLAGS	=	-Wall -Wextra -Werror -std=c++98

NAME	=	zombies
FILES	=	main.cpp Zombie.cpp newZombie.cpp randomChump.cpp

OBJ		=	$(FILES:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

%.o: %.cpp
	$(CC) $(CFLAGS) -c $^ -o $@

clean:
	$(RM) $(OBJ) $(wildcard *.gch)

fclean: clean
	$(RM) $(NAME)

re: fclean all
